<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:DescoperaMuntii"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DescoperaMuntii.HomePage">

    <TabbedPage.ToolbarItems>

        <ToolbarItem Text="Add"
                     Clicked="ToolbarItem_Clicked"/>
    </TabbedPage.ToolbarItems>
    <ContentPage>
        <StackLayout>
            <Entry x:Name="addComentariu"
                   Placeholder="Lasă un comentariu!"/>
        </StackLayout>
    </ContentPage>
    

    <local:AreasPage Title="Regiuni montane"/>
    <local:ProfilePage Title="Profilul meu"/>

</TabbedPage>